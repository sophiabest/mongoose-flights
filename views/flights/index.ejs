<%- include('../partials/header') %>
    <h3>Flight List</h3>
    <table>
        <thead>
            <tr>
                <th>Airline</th>
                <th>Airport</th>
                <th>Flight #</th>
                <th>Departs</th>
            </tr>
        </thead>
        <tbody>
            <!-- Write the line of EJS to iterate over flights using forEach -->
            <!-- Sort the flights by ascending order -->
            <% flights.sort(function(a, b) { %>
                <% return a.departs - b.departs %>
            <% }) %>
            <% flights.forEach(function(f) { %>
                <tr>
                    <td><%= f.airline %></td>
                    <td><%= f.airport %></td>
                    <td><%= f.flightNo %></td>
                    <td><%= f.departs %> <a href="/flights/<%= f._id %>">Details</a>
                    </td>
                </tr>
             <% }) %>
        </tbody>
    </table>
    <%- include('../partials/footer') %>